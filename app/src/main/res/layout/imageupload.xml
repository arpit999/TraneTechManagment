<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlimageupload"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_trnetech" >

    <Button
        android:id="@+id/btnuploadButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Upload"
        android:background="@color/btn_effects" />

    <ImageView
        android:id="@+id/img_traklogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnuploadButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/company_logo" />

    <TextView
        android:id="@+id/tvmessageText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnuploadButton"
        android:layout_marginTop="93dp"
        android:gravity="center"
        android:textColor="#0b84aa"
        android:textStyle="bold" />

</RelativeLayout>