<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="styleName">
        <item name="android:ems">10</item>
        <item name="android:gravity">center_vertical|right|center_horizontal|fill_horizontal</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:password">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#372c24</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="styleName1" parent="android:Widget.Holo.Light.EditText">
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
